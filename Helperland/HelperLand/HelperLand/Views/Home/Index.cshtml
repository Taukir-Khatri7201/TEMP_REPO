@section Scripts {
    <script>
        $(document).ready(function() {
            var popupstatus = '@ViewBag.PopUpStatus';
            if(popupstatus.length > 0) {
                $('#SuccessModal').modal('show');
                $('.success-modal span').css('background-color', '#67b644');
                $('#success-msg-img').prop('src', '/assets/correct-white-medium.png');
                if(popupstatus === "Logout") {
                    $('#success-msg').text("You have successfully logged out");
                } else if(popupstatus === "ChangePassword") {
                    $('#success-msg').text("Password changed successfully");
                } else if(popupstatus === "PasswordResetLinkSent") {
                    $('#success-msg').text("Password reset link has been sent");
                }
            }

            var invalidCredsStatus = '@ViewBag.InvalidCreds';
            if(invalidCredsStatus.length > 0) {
                if(invalidCredsStatus === "Invalid Email Address Forgot Pass") {
                    $('#forgotpassmodal').modal('show');
                } else {
                    $('#loginmodal').modal('show');
                }
                invalidCredsStaus = null;
            }

            var loginRequired = '@ViewBag.LoginRequired';
            if(loginRequired.length > 0) {
                $('#loginmodal').modal('show');
            }
            var error = '@ViewBag.Error';
            if(error.length > 0) {
                $('#SuccessModal').modal('show');
                $('.success-modal span').css('background-color', '#e82e2e');
                $('#success-msg-img').prop('src', '/assets/close-white.png');
                $('#success-msg').text(error);
            }
        });
    </script>
